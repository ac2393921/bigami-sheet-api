# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type School {
  id: ID!
  name: String!
  style: String!
  enemy: String!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
  schools: [School!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
